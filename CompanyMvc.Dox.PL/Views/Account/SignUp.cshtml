@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All" class="my-3"></div>
<div>
	<form asp-action="SignUp" asp-controller="Account">
		<input class="text my-2" asp-for="UserName" placeholder="Username" required="">
		<input class="text my-2 " asp-for="FirstName" placeholder="FirstName" required="">
		<input class="text my-2 " asp-for="LastName" placeholder="LastName" required="">
		<input class="text my-2  email" asp-for="Email" placeholder="Email" required="">
		<input class="text my-2 " asp-for="Password" placeholder="Password" required="">
		<input class="text my-2  w3lpass" asp-for="ConfirmedPassword" placeholder="ConfirmedPassword" required="">
		<div class="wthree-text">
			<label class="anim">
				<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
				<span>I Agree To The Terms & Conditions</span>
			</label>
			<div class="clear"> </div>
		</div>
		<input type="submit" value="SignUp">
	</form>

	<p>You have an Account? <a asp-action="Login" asp-controller="Account"> Login Now!</a></p>
	
</div>

