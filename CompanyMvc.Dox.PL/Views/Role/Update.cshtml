@model RoleViewModel

@{
    ViewData["Title"] = "Update";
}

<div class="DetailsUsers After shadow px-5 py-3 rounded-2 my-2 ">
    <div class="w-100 mb-3 text-center">


        <h1 class=" ">Update User @Model.RoleName   </h1>
    </div>



    <form asp-action="Update">

        <div asp-validation-summary="All" class="w-100 h-25 justify-content-center p-5 m-5 rounded-3 shadow bg-danger"></div>

        <partial name="RolePartialView/PartialViewToCreateAndUpdate"></partial>

        <a asp-action="AddOrRemoveUser" asp-route-roleId="@Model.Id" class="btn btn-light">Add Or Remove User</a>



        <div class="d-flex justify-content-between  my-3">
            <input type="submit" value="Update" class="btn btn-success  />
            <a asp-controller="Role" asp-action="Index" class="btn btn-warning">Back To List</a>

        </div>
    </form>

    @section ClientSideValidationByHazem {


        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    }


</div>