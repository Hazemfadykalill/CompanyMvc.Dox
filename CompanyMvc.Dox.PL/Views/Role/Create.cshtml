@model RoleViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="CreateNewRole After shadow px-5 py-3 rounded-2 my-2">
    <div class="w-100 mb-3 text-center">
        <h1 class=" ">Create New Role </h1>
    </div>
    <form asp-action="Create" asp-controller="Role">
        <partial name="RolePartialView/PartialViewToCreateAndUpdate"></partial>
        <input hidden asp-for="Id" />

   

        <div class="d-flex justify-content-between  my-3">
            <input type="submit" value="Create" class="btn btn-success my-2 " />
            <a asp-action="Index" class="btn btn-warning">Back To List</a>
        </div>
    </form>


    @section ClientSideValidationByHazem {

        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</div>
