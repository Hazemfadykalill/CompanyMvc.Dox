 @model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="w-100 m-5  bg-dark text-center shadow p-3 rounded-3">
    <h1 class="text-white ">All Users </h1>
</div>


<br />
<br />

@if (Model.Count() > 0)
{
    <div class="Searh w-75  m-auto my-3">
        <form asp-action="Index" class=" d-flex justify-content-center gap-3">
            <input type="text" id="InputSearch" name="InputSearch" class="form-control" />
            <input type="submit" value="Search" class="btn btn-success p-3 rounded-2" />
        </form>
    </div>

    <div class=" BodeAllEmps">
        <table class="table table-striped table-hover text-center ">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(U => U.Id)</th>
                    <th>@Html.DisplayNameFor(U => U.FirstName)</th>
                    <th>@Html.DisplayNameFor(U => U.LastName)</th>
                    <th>@Html.DisplayNameFor(U => U.Email)</th>
                    <th>@Html.DisplayNameFor(U => U.Roles)</th>

                    <th>Details</th>              
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>

                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@string.Join(" ",user.Roles)</td>
                        <partial name="ButtonsPartialView" model="@user.Id"></partial>

                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Users :(</h4>
    </div>
}
