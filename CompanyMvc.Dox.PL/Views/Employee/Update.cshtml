@model EmployeeViewModel

@{
    ViewData["Title"] = "Update";
}



<div class="w-100 m-5 text-center bg-dark shadow p-5 rounded-3">
    <h1 class="text-white ">Update Employee </h1>
</div>



<form asp-action="Update" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="w-100 h-25 justify-content-center p-5 m-5 rounded-3 shadow bg-danger"></div>

    <partial name="PartialView/PartialViewToCreateAndUpdate"></partial>
    <input hidden asp-for="ImageName" />
    <input type="submit" value="Update" class="btn btn-primary" />
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section ClientSideValidationByHazem {


    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


}