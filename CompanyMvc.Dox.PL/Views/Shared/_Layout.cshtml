<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompanyMvc.Dox.PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LayoutStyle.css" asp-append-version="true" />
<style>
        .defaultLayout {
            display: flex;
            justify-content: space-between;
            flex-direction:column;
            height: 100vh;
            width: 100%;
           
        }

        .Navs .navbar .container-fluid .defaultLayout .headerTittle a {
            font-size: 30px;
            font-weight: bold;
        }

</style>
</head>
<body>
    <section class="defaultLayout  ">

        <div class="Navs ">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow mb-3 justify-content-center align-items-center">
                <div class="container p-2 d-flex align-items-center justify-content-between">
                    <div class="headerTittle ">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">CompanyDox</a>

                    </div>
                    @*
                        {  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                           aria-expanded="false" aria-label="Toggle navigation">
                           <span class="navbar-toggler-icon"></span>
                           </button>
                         }
                    *@


                    <div class="navbar-collapse collapse ">
                        <ul class="navbar-nav mx-auto  ">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="Index">Department</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Employee</a>
                            </li>

                        </ul>

                        <ul class="navbar-nav   d-flex align-items-center gap-3">
                            
                            <li class="nav-item">
                                
                                <button class=" btn btn-success rounded-2 border-0  px-3 py-2"><a class="text-white  fw-bold text-decoration-none " asp-controller="User" asp-action="Index">Users</a> </button>

                            </li>

                            <li class="nav-item">
                                
                                <button class=" btn btn-success rounded-2 border-0  px-3 py-2"><a class="text-white  fw-bold text-decoration-none " asp-controller="Role" asp-action="Index">Roles</a> </button>

                            </li>



                            <li class="nav-item">
                                
                                <button class=" btn btn-danger rounded-2 border-0  px-3 py-2"><a class="text-white  fw-bold text-decoration-none " asp-controller="Account" asp-action="LogOut">LogOut</a> </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

        <div class="RenderPartInDefaultLayout container-fluid d-flex justify-content-center align-items-center mb-3 ">

         
                @RenderBody()
           
           

        </div>


        <div class=" text-center text-muted footerInDefaultLayout mt-auto bg-gradient  w-100 p-3  ">
            &copy; 2024 - CompanyMvc.Dox.PL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>




    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("ClientSideValidationByHazem", required: false)
</body>
</html>
